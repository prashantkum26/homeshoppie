// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email             String   @unique
  name              String?
  phone             String?
  password          String?
  image             String?
  role              Role     @default(USER)
  defaultAddressId  String?  @db.ObjectId
  isLocked          Boolean  @default(false)
  lockUntil         DateTime?
  failedLoginCount  Int      @default(0)
  lastLoginAt       DateTime?
  passwordChangedAt DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  addresses     Address[]
  orders        Order[]
  cartItems     CartItem[]
  securityLogs  SecurityLog[]
  rateLimits    RateLimit[]

  @@map("users")
}

model SecurityLog {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  userId      String?           @db.ObjectId
  action      SecurityAction
  ipAddress   String
  userAgent   String?
  details     Json?
  severity    SecuritySeverity  @default(LOW)
  blocked     Boolean           @default(false)
  createdAt   DateTime          @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@map("security_logs")
}

model RateLimit {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String?  @db.ObjectId
  ipAddress  String
  endpoint   String
  requests   Int      @default(1)
  windowStart DateTime @default(now())
  blocked    Boolean  @default(false)

  user User? @relation(fields: [userId], references: [id])

  @@unique([ipAddress, endpoint])
  @@map("rate_limits")
}

model TaxConfiguration {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  name          String      @unique
  type          TaxType
  rate          Float       // Percentage rate
  isActive      Boolean     @default(true)
  applicableIn  String[]    // States/regions where applicable
  productTypes  String[]    // Product categories this applies to
  minAmount     Float?      // Minimum order amount for tax
  maxAmount     Float?      // Maximum taxable amount
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("tax_configurations")
}

model PaymentLog {
  id                String        @id @default(auto()) @map("_id") @db.ObjectId
  orderId           String        @db.ObjectId
  razorpayOrderId   String?       @unique
  razorpayPaymentId String?       @unique
  signature         String?
  amount            Float
  currency          String        @default("INR")
  status            PaymentStatus @default(PENDING)
  method            String?       // card, netbanking, upi, etc
  gateway           String        @default("razorpay")
  gatewayResponse   Json?         // Full gateway response
  failureReason     String?
  retryCount        Int           @default(0)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  order Order @relation(fields: [orderId], references: [id])

  @@map("payment_logs")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String    @unique
  description String?
  image       String?
  slug        String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  @@map("categories")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  compareAt   Float?
  images      String[] // Array of image IDs referencing Image model
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String   @db.ObjectId
  stock       Int      @default(0)
  isActive    Boolean  @default(true)
  slug        String   @unique
  weight      Float?
  unit        String?
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  cartItems     CartItem[]
  orderItems    OrderItem[]
  productImages Image[]    @relation("ProductImages")

  @@map("products")
}

model Image {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  serviceImageId   String   @unique // The ID from the image service
  filename         String
  originalName     String
  mimeType         String
  size             Int
  width            Int?
  height           Int?
  alt              String?
  title            String?
  category         String?
  tags             String[]
  isPublic         Boolean  @default(true)
  
  // Service URLs
  serviceUrl       String   // Direct service URL
  publicUrl        String   // Public access URL through our API
  thumbnailUrl     String?
  smallUrl         String?
  mediumUrl        String?
  largeUrl         String?
  
  // Metadata from service
  variants         Json?    // Store variant information
  accessToken      String?  // Service access token if needed
  
  // Relations
  productId        String?  @db.ObjectId
  product          Product? @relation("ProductImages", fields: [productId], references: [id])
  
  // Upload tracking
  uploadedBy       String   @db.ObjectId
  uploadedByEmail  String
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("images")
}

model Address {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String @db.ObjectId
  name     String
  phone    String
  street   String
  city     String
  state    String
  pincode  String
  landmark String?
  type     String @default("HOME") // HOME, WORK, OTHER
  
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("addresses")
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  productId String   @db.ObjectId
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("cartitems")
}

model Order {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber     String      @unique
  userId          String      @db.ObjectId
  addressId       String      @db.ObjectId
  status          OrderStatus @default(PENDING)
  paymentMethod   String
  paymentStatus   PaymentStatus @default(PENDING)
  paymentIntentId String?
  totalAmount     Float
  subtotalAmount  Float?      // Amount before tax and shipping
  taxAmount       Float       @default(0)
  taxBreakdown    Json?       // Detailed tax breakdown
  shippingFee     Float       @default(0)
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user        User         @relation(fields: [userId], references: [id])
  address     Address      @relation(fields: [addressId], references: [id])
  orderItems  OrderItem[]
  paymentLogs PaymentLog[]

  @@map("orders")
}

model OrderItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String @db.ObjectId
  productId String @db.ObjectId
  quantity  Int
  price     Float
  name      String

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("orderitems")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum SecurityAction {
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  PASSWORD_CHANGE
  ACCOUNT_LOCKED
  SUSPICIOUS_ACTIVITY
  API_ACCESS
  UNAUTHORIZED_ACCESS
  DATA_BREACH_ATTEMPT
}

enum SecuritySeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum TaxType {
  PERCENTAGE
  FIXED_AMOUNT
  GST
  STATE_TAX
  CITY_TAX
}
